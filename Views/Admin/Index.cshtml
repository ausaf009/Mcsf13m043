@model hotel_managment_system.Models.Admin
<!DOCTYPE html>
<html>
<head>
    <title>Ausaf</title>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href='http://fonts.googleapis.com/css?family=Rochester' rel='stylesheet' type='text/css' />
</head>
<body>
    <div class="main">
        <div class="wrap">
            <div class="content-bot">
                <div class="inner-top">
                    <div class="col span_2_of_3">
                        <div class="contact-form">
                            <h3>WELCOME TO Admin!</h3>
                            <form method="post" action="~/Home/Index">
                                <div>
                                    <span><label>Total no. of client</label></span>
                                    @Html.ValidationMessageFor(x => x.Total_Clients);
                                    <span><input name="clientno" value="@ViewBag.a" type="text" class="textbox"></span>
                                </div>
                                <div>
                                    <span><label>Total Reserved Rooms</label></span>
                                    @Html.ValidationMessageFor(x => x.Reserved_Rooms);
                                    <span><input name="resRoom" value="@ViewBag.b" type="text" class="textbox"></span>
                                </div>
                                <div>
                                    <span><label>Vacent Rooms</label></span>
                                    @Html.ValidationMessageFor(x => x.Vacent_Rooms);
                                    <span><input name="vacRoom" value="@ViewBag.c" type="text" class="textbox"></span>
                                </div>
                                <div>
                                    <span><label>Total Income</label></span>
                                    @Html.ValidationMessageFor(x => x.Total_Incom);
                                    <span><input name="incom" value="@ViewBag.d" type="text" class="textbox"></span>
                                </div>
                                
                                
                                <div>
                                    <span><input type="submit" value="Submit"></span>
                                </div>
                                <br />
                              
                                
                       </form>
                            <br>
                            <br>
                            <form action="/Admin/save" method="post" enctype="multipart/form-data">

                                Upload Image: <input type="file" name="image" />



                                <input type="submit" value="upload" />
                            </form>
                        </div>
                    </div>

                    </footer>
                    <div class="footer-bottom">
                        <div class="wrap">
                            <div class="copy">
                                <p>All rights Reserved | Design by: ORION SOFTS</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                  
</body>
</html>



